@model CarWebSite.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<h2>Edit Car</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CarId" />

    <div class="mb-3">
        <label asp-for="Brand" class="form-label"></label>
        <select asp-for="Brand" class="form-select" asp-items="new SelectList(ViewBag.Brands)"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    @* <div class="mb-3">
        <label asp-for="Mileage" class="form-label"></label>
        <input asp-for="Mileage" class="form-control" />
    </div> *@

    <div class="mb-3">
        <label asp-for="Mileage" class="form-label"></label>
        @if (User.IsInRole("Admin"))
        {
            <input asp-for="Mileage" class="form-control" value="0" readonly />
            <small class="text-muted">As an admin, mileage is automatically set to 0.</small>
        }
        else if (User.IsInRole("Client"))
        {
            <input asp-for="Mileage" class="form-control" required min="5000" />
            <small class="text-muted">As a client, mileage must be 5000 or less.</small>
        }
        else
        {
            <input asp-for="Mileage" class="form-control" required min="0" />
        }
        <span asp-validation-for="Mileage" class="text-danger"></span>
        </div>

    <div class="mb-3">
        <label asp-for="Color" class="form-label"></label>
        <select asp-for="Color" class="form-select" asp-items="new SelectList(ViewBag.Colors)"></select>
    </div>

    <div class="mb-3">
        <label asp-for="BodyType" class="form-label"></label>
        <select asp-for="BodyType" class="form-select" asp-items="new SelectList(ViewBag.BodyTypes)"></select>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="MyListings" class="btn btn-secondary">Cancel</a>
</form>


<style>
        /* Form Container */
        form {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background-color: #FFF0EA;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        /* Heading */
        h2 {
            color: #45322a;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Form Group Margin */
        .mb-3 {
            margin-bottom: 1rem;
        }

        /* Form Labels */
        .form-label {
            font-weight: 600;
            display: block;
            margin-bottom: 0.5rem;
            color: #45322a;
        }

        /* Form Controls & Selects */
        .form-control,
        .form-select {
            width: 100%;
            padding: 8px 12px;
            border: 2px solid #6E4331;
            border-radius: 4px;
            transition: border-color 0.3s ease;
        }
        .form-control:focus,
        .form-select:focus {
            border-color: #6E4331;
            outline: none;
        }

        /* Buttons Base */
        .btn {
            padding: 8px 16px;
            border-radius: 4px;
            transition: background-color 0.3s ease, border-color 0.3s ease;
            text-decoration: none;
        }

        /* Success Button */
        .btn-success {
            background-color: #6E4331;
            color: #fff;
        }
        .btn-success:hover {
            background-color: #994c2b;
            color: #fff;
        }

        /* Secondary Button */
        .btn-secondary {
            background-color: #6c757d;
            border: 1px solid #6c757d;
            color: #fff;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: #fff;
        }
    </style>