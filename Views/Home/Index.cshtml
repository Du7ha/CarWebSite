@model CarWebSite.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="categories-title">Categories</h1>
</div>

<style>
.categories-title {
    font-size: 60px;
    color: #45322a;
    text-align: center;
    margin-top: 20px;
    padding: 10px;
    border-radius: 5px;
    text-shadow: 2px 2px 2px black;
}
</style>

<!-- Categories Section -->
<div class="categories-section scroll-container">
    <button class="scroll-btn categories-left-btn">◀</button>
    <div class="categories-scroll-content scroll-content">
        @foreach (var bodyType in Enum.GetNames(typeof(CarWebSite.Models.BodyType)))
        {
            <div class="category-item">
                <a href="@Url.Action("NewCars", "Home", new { bodyType = bodyType })" class="category-link filter-redirect" data-filter="bodyType" data-value="@bodyType">
                    <div class="category-text-container">
                        <p class="category-text">@bodyType</p>
                    </div>
                </a>
            </div>
        }
    </div>
    <button class="scroll-btn categories-right-btn">▶</button>
</div>

<div class="text-center">
    <h1 class="brands-title">Brands</h1>
</div>

<style>
.brands-title {
    font-size: 60px;
    color: #45322a;
    text-align: center;
    margin-top: 20px;
    padding: 10px;
    border-radius: 5px;
    text-shadow: 2px 2px 2px black;
}
.scroll-container {
    display: flex;
    align-items: center;
    overflow: hidden;
    width: 100%;
}

.scroll-content {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    width: 100%;
}

/* Hide the visual scrollbar */
.scroll-content::-webkit-scrollbar {
    display: none;
}

.scroll-content {
    -ms-overflow-style: none; /* Hide scrollbar in IE/Edge */
    scrollbar-width: none; /* Hide scrollbar in Firefox */
}

.category-item {
    position: relative;
    margin: 20px;
    border-radius: 15px;
    min-width: 150px;
    min-height: 70px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
}

.category-item:hover {
    transform: scale(1.05);
}

.category-link {
    text-decoration: none;
    width: 100%;
    height: 100%;
    display: block;
}

.category-text-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50%;
    width: 100%;
    border-radius: 15px;
    background-color: #6E4331;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    margin-top: 20px;
    cursor: pointer;
}

.category-text {
    font-size: 14px;
    font-weight: bold;
    color: white;
    margin: 0;
    padding: 12px;
}

.photo-item {
    position: relative;
    margin: 20px;
    border-radius: 15px;
    min-width: 200px;
    min-height: 200px;
    text-align: center;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.3s ease;
}

.photo-item:hover {
    transform: scale(1.05);
}

.brand-link {
    text-decoration: none;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

img {
    width: 50%;
    height: 50%;
    border-radius: 10px;
    object-fit: cover;
    align-items: center;
    background-color: white;
}

.photo-text {
    font-size: 12px;
    color: #333;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(255, 255, 255, 0.7);
    padding: 5px;
    border-radius: 5px;
}

.scroll-btn {
    cursor: pointer;
    border: none;
    background-color: #994c2b;
    color: white;
    font-size: 20px;
    padding: 10px;
    margin: 10px 10px;
    border-radius: 20px;
}

.scroll-btn:hover {
    background-color: #6E4331;
}

/* News section styles */
.news {
    font-size: 60px;
    color: #45322a;
    text-align: center;
    margin-top: 20px;
    padding: 10px;
    border-radius: 5px;
    text-shadow: 2px 2px 2px black;
}

.news-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin: 20px auto;
    max-width: 1200px;
}

.news-item {
    position: relative;
    width: calc(50% - 20px);
    max-width: 500px;
    height: 300px;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease;
}

.news-item:hover {
    transform: scale(1.03);
}

.news-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.news-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.7);
    padding: 15px;
}

.news-title {
    color: white;
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 5px;
}

.news-description {
    color: #ddd;
    font-size: 14px;
}
</style>

<div class="brands-section scroll-container">
    <button class="scroll-btn brands-left-btn">◀</button>
    <div class="brands-scroll-content scroll-content">
        @foreach (var photo in Model.Photos)
        {
            <div class="photo-item">
                <a href="@Url.Action("NewCars", "Home", new { brand = photo.Description })" class="brand-link filter-redirect" data-filter="brand" data-value="@photo.Description">
                    <img src="@photo.Url" alt="@photo.Description" />
                    <p class="photo-text">@photo.Description</p>
                </a>
            </div>
        }
    </div>
    <button class="scroll-btn brands-right-btn">▶</button>
</div>

<div class="text-center">
    <h1 class="news">News</h1>
</div>

<!-- News Section -->
<div class="news-container">
    <a href="https://www.autonews.com/" target="_blank" class="news-item">
        <img src="/Images/new1.jpg" alt="Car News 1" />
        <div class="news-overlay">
            <h3 class="news-title">Latest Car Models for 2025</h3>
            <p class="news-description">Discover the newest vehicles hitting the market this year</p>
        </div>
    </a>
    <a href="https://www.motortrend.com" target="_blank" class="news-item">
        <img src="/Images/new2.jpg" alt="Car News 2" />
        <div class="news-overlay">
            <h3 class="news-title">Electric Vehicle Revolution</h3>
            <p class="news-description">How EVs are changing the automotive landscape</p>
        </div>
    </a>
    <a href="https://www.topgear.com/car-news" target="_blank" class="news-item">
        <img src="/Images/new3.jpg" alt="Car News 3" />
        <div class="news-overlay">
            <h3 class="news-title">Best SUVs of the Year</h3>
            <p class="news-description">Top-rated SUVs for families and adventure seekers</p>
        </div>
    </a>
    <a href="https://www.caranddriver.com/news/" target="_blank" class="news-item">
        <img src="/Images/new4.jpg" alt="Car News 4" />
        <div class="news-overlay">
            <h3 class="news-title">Future of Autonomous Driving</h3>
            <p class="news-description">Self-driving technology advances and what's coming next</p>
        </div>
    </a>
    <a href="https://newsroom.porsche.com/en.html" target="_blank" class="news-item">
        <img src="/Images/new5.jpg" alt="Car News 5" />
        <div class="news-overlay">
            <h3 class="news-title">Future of Autonomous Driving</h3>
            <p class="news-description">Self-driving technology advances and what's coming next</p>
        </div>
    </a>
    <a href="https://www.bmwblog.com/" target="_blank" class="news-item">
        <img src="/Images/new6.jpg" alt="Car News 6" />
        <div class="news-overlay">
            <h3 class="news-title">Future of Autonomous Driving</h3>
            <p class="news-description">Self-driving technology advances and what's coming next</p>
        </div>
    </a>
</div>

<script>
// Function to store filter in session and redirect
function storeFilterAndRedirect(filter, value, url) {
    // Store filter in session storage
    sessionStorage.setItem('selectedFilter', filter);
    sessionStorage.setItem('selectedValue', value);
    
    // Redirect to the URL
    window.location.href = url;
    return false;
}

// Categories section
const categoriesScrollContent = document.querySelector('.categories-scroll-content');
const categoriesLeftBtn = document.querySelector('.categories-left-btn');
const categoriesRightBtn = document.querySelector('.categories-right-btn');

// Scroll left for categories
categoriesLeftBtn.addEventListener('click', () => {
    categoriesScrollContent.scrollBy({
        left: -200, // Adjusted for smaller category boxes
        behavior: 'smooth'
    });
});

// Scroll right for categories
categoriesRightBtn.addEventListener('click', () => {
    categoriesScrollContent.scrollBy({
        left: 200, // Adjusted for smaller category boxes
        behavior: 'smooth'
    });
});

// Brands section
const brandsScrollContent = document.querySelector('.brands-scroll-content');
const brandsLeftBtn = document.querySelector('.brands-left-btn');
const brandsRightBtn = document.querySelector('.brands-right-btn');

// Scroll left for brands
brandsLeftBtn.addEventListener('click', () => {
    brandsScrollContent.scrollBy({
        left: -300,
        behavior: 'smooth'
    });
});

// Scroll right for brands
brandsRightBtn.addEventListener('click', () => {
    brandsScrollContent.scrollBy({
        left: 300,
        behavior: 'smooth'
    });
});

// Handle filter redirects
document.querySelectorAll('.filter-redirect').forEach(link => {
    link.addEventListener('click', function(e) {
        e.preventDefault();
        const filter = this.getAttribute('data-filter');
        const value = this.getAttribute('data-value');
        const url = this.getAttribute('href');
        
        storeFilterAndRedirect(filter, value, url);
    });
});
</script>