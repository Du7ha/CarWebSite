        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Toggle favorite icon
            $('.favorite-btn').click(function() {
                $(this).find('i').toggleClass('bi-heart bi-heart-fill text-danger');
            });
        });
    </script>
}