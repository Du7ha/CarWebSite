@{
    ViewData["Title"] = "Used Cars";
    var usedCars = new List<(int Id, string Title, string Image)>
    {
        (1, "2021 Mahindra XUV700", "/images/images(3).jpg"),
        (2, "2021 Nissan Ariya", "/images/e869d5ebe2e741119b15964925b077a6.jpg"),
        (3, "2021 Nissan Ariya Sport", "/images/images(2).jpg"),
        (4, "2021 Rolls-Royce Cullinan", "/images/41X0G5+nddL._AC_UF1000,1000_QL80_.jpg"),
        (5, "2021 Nissan Ariya Black", "/images/37716ecbb91240cfa348d8186273b3d9.jpg")
    };
}

<div class="container-fluid p-0">
    <div class="position-relative">
        <div class="bg-light" style="background-color: #f5e6d8 !important; min-height: 200px;"></div>

        <div class="container position-relative" style="margin-top: -100px;">
            <div class="row justify-content-center mb-5">
                <div class="col-md-8 text-center">
                    <div class="card border-light shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title text-center mb-4" style="color: #8B4513; font-weight: bold;">Choose your car</h2>
                            <div class="d-flex justify-content-center gap-3 flex-wrap">
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">Model</button>
                                    <ul class="dropdown-menu">
                                        @foreach (var bodyType in ViewBag.BodyTypes)
                                        {
                                            <li><a class="dropdown-item" href="#">@bodyType</a></li>
                                        }
                                    </ul>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">Brand</button>
                                    <ul class="dropdown-menu">
                                        @foreach (var brand in ViewBag.Brands)
                                        {
                                            <li><a class="dropdown-item" href="#">@brand</a></li>
                                        }
                                    </ul>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">Price</button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#">Under $30,000</a></li>
                                        <li><a class="dropdown-item" href="#">$30,000 - $50,000</a></li>
                                        <li><a class="dropdown-item" href="#">$50,000 - $100,000</a></li>
                                        <li><a class="dropdown-item" href="#">Over $100,000</a></li>
                                    </ul>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">Color</button>
                                    <ul class="dropdown-menu">
                                        @foreach (var color in ViewBag.Colors)
                                        {
                                            <li><a class="dropdown-item" href="#">@color</a></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Car Listings -->
            <div class="row justify-content-center">
                <div class="col-md-10">
                    @foreach (var car in usedCars)
                    {
                        <a href="/Home/CarDetails?carId=@car.Id" class="text-decoration-none text-dark">
                            <div class="card mb-4 shadow-sm hover-shadow" style="cursor: pointer;">
                                <div class="card-body p-0">
                                    <div class="row g-0">
                                        <div class="col-md-5">
                                            <img src="@car.Image" class="img-fluid rounded-start" alt="@car.Title">
                                        </div>
                                        <div class="col-md-7">
                                            <div class="card-body position-relative p-4">
                                                <button class="btn btn-sm position-absolute top-0 end-0 mt-2 me-2 border-0 favorite-btn">
                                                    <i class="bi bi-heart"></i>
                                                </button>
                                                <h5 class="card-title">@car.Title</h5>
                                                <p class="card-text mb-1">43,629 mi</p>
                                                <p class="card-text mb-1"><strong>$61,999</strong></p>
                                                <p class="card-text mb-1 deal-rating">Fair Deal</p>
                                                <p class="card-text mb-1">The Autobarn Volkswagen of Countryside</p>
                                                <p class="card-text mb-1">
                                                    <span class="me-2">4.9</span>
                                                    <span>(1,450 reviews)</span>
                                                </p>
                                                <p class="card-text">Countryside, IL</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.favorite-btn').click(function (e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).find('i').toggleClass('bi-heart bi-heart-fill text-danger');
            });
        });
    </script>
    <style>
        .hover-shadow:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
            transition: all 0.2s ease-in-out;
        }
    </style>
}
