@{
    ViewData["Title"] = "Used Cars";
}

<div class="container-fluid p-0">
    <!-- Background with car silhouette -->
    <div class="position-relative">
        <div class="bg-light" style="background-color: #f5e6d8 !important; min-height: 200px; position: relative; overflow: hidden;">
            <!-- Background car silhouette -->
        </div>

        <div class="container position-relative" style="margin-top: -100px;">
            <!-- Filter Section -->
            <div class="row justify-content-center mb-5">
                <div class="col-md-8 text-center">
                    <div class="card border-light shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title text-center mb-4" style="color: #8B4513; font-weight: bold;">Choose your car</h2>
                            <div class="d-flex justify-content-center gap-3 flex-wrap">
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Model
                                    </button>
                                    <ul class="dropdown-menu">
                                        @foreach (var bodyType in ViewBag.BodyTypes)
                                        {
                                            <li><a class="dropdown-item" href="#">@bodyType</a></li>
                                        }
                                    </ul>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Brand
                                    </button>
                                    <ul class="dropdown-menu">
                                        @foreach (var brand in ViewBag.Brands)
                                        {
                                            <li><a class="dropdown-item" href="#">@brand</a></li>
                                        }
                                    </ul>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Price
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#">Under $30,000</a></li>
                                        <li><a class="dropdown-item" href="#">$30,000 - $50,000</a></li>
                                        <li><a class="dropdown-item" href="#">$50,000 - $100,000</a></li>
                                        <li><a class="dropdown-item" href="#">Over $100,000</a></li>
                                    </ul>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Color
                                    </button>
                                    <ul class="dropdown-menu">
                                        @foreach (var color in ViewBag.Colors)
                                        {
                                            <li><a class="dropdown-item" href="#">@color</a></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Car Listings -->
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <!-- Car 1 -->
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="col-md-5">
                                    <img src="/images/images(3).jpg" class="img-fluid rounded-start" alt="Mahindra XUV700">
                                </div>
                                <div class="col-md-7">
                                    <div class="card-body position-relative p-4">
                                        <!-- Favorite Button -->
                                        <button class="btn btn-sm position-absolute top-0 end-0 mt-2 me-2 border-0 favorite-btn">
                                            <i class="bi bi-heart"></i>
                                        </button>

                                        <h5 class="card-title">2021 Mahindra XUV700</h5>
                                        <p class="card-text mb-1">43,629 mi</p>
                                        <p class="card-text mb-1"><strong>$61,999</strong></p>
                                        <p class="card-text mb-1 deal-rating">Fair Deal</p>
                                        <p class="card-text mb-1">The Autobarn Volkswagen of Countryside</p>
                                        <p class="card-text mb-1">
                                            <span class="me-2">4.9</span>
                                            <span>(1,450 reviews)</span>
                                        </p>
                                        <p class="card-text">Countryside, IL</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

