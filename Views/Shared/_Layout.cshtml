<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarWebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarWebSite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- In the head section of _Layout.cshtml -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo instead of text -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/Weblogo.png" alt="Car WebSite Logo" height="40px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="NewCars">New Car</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="UsedCars">Used Car</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="OfferYourCar">Offer Your Car</a>
                        </li>
                    </ul>
                    <!-- Icons on the right side -->
                    <ul class="navbar-nav">
                        <!-- Sign In Link -->
                        <li class="nav-item">
                            <label for="signInToggle" class="nav-link text-dark" style="cursor: pointer;">Sign In</label>
                        </li>
                        <!-- User Profile Icon -->
                        <li class="nav-item">
                            <a class="nav-link icon-link" asp-area="" asp-controller="Home" asp-action="Profile">
                                <i class="fas fa-user"></i>
                            </a>
                        </li>
                        <!-- Bar Icon -->
                        <label for="menuToggle" class="nav-link icon-link">
                            <i class="fas fa-bars"></i>
                        </label>
                        <!-- Hidden Checkbox for toggling -->
                        <input type="checkbox" id="menuToggle" class="menu-checkbox" />
                        <!-- Floating Sliding Menu -->
                        <div id="floatingMenu" class="floating-menu">
                            <ul>
                                <li><a asp-controller="Home" asp-action="Profile">Profile</a></li>
                                <li><a asp-controller="Home" asp-action="About">About</a></li>
                                <li><a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                            </ul>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hidden Checkbox for Sign-In Frame -->
    <input type="checkbox" id="signInToggle" class="frame-checkbox" />

    <div class="background-overlay"></div>

    <!-- Floating Sign-In Frame -->
    <div id="signInFrame" class="floating-frame">
        <h2>Sign In</h2>
        <form action="/Account/SignIn" method="post">
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required />
            </div>
            <div>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required />
            </div>
            <div>
                <button type="submit">Sign In</button>
            </div>
            <hr />
            <div>
                <button type="button" class="google-signin">
                    <i class="fab fa-google"></i> Sign in with Google
                </button>
            </div>
        </form>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CarWebSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
    // Script to close the sign-in frame when clicking outside of it
    document.addEventListener('DOMContentLoaded', function() {
        const overlay = document.querySelector('.background-overlay');
        const signInToggle = document.getElementById('signInToggle');
        
        if (overlay && signInToggle) {
            overlay.addEventListener('click', function() {
                signInToggle.checked = false;
            });
        }
    });
</script>
</body>
</html>
